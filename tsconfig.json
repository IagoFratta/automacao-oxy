{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true, 
        "noImplicitAny": true,
        "strictNullChecks": true, 
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}